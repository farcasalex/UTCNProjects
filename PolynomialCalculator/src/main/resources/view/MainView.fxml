<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainViewController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="200.0">
            <children>
                <TextField fx:id="input" layoutX="50.0" layoutY="225.0" prefWidth="500.0">
                    <font>
                        <Font size="15.0" />
                    </font>
                </TextField>
                <TextArea fx:id="display" layoutX="50.0" layoutY="14.0" prefHeight="200.0" prefWidth="500.0" wrapText="true">
                    <font>
                        <Font size="20.0" />
                    </font>
                </TextArea>
                <Button fx:id="add" layoutX="50.0" layoutY="259.0" onAction="#addAction" prefHeight="60.0" prefWidth="60.0" text="+">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button fx:id="substract" layoutX="130.0" layoutY="259.0" onAction="#substractAction" prefHeight="60.0" prefWidth="60.0" text="-">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button fx:id="multiply" layoutX="211.0" layoutY="259.0" onAction="#multiplyAction" prefHeight="60.0" prefWidth="60.0" text="*">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button fx:id="divide" layoutX="50.0" layoutY="333.0" onAction="#divideAction" prefHeight="60.0" prefWidth="60.0" text=":">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button fx:id="derive" layoutX="130.0" layoutY="333.0" onAction="#deriveAction" prefHeight="60.0" prefWidth="60.0" text="( )'">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button fx:id="integrate" layoutX="211.0" layoutY="333.0" onAction="#integrateAction" prefHeight="60.0" prefWidth="60.0" text="∫">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button fx:id="submit" layoutX="490.0" layoutY="259.0" onAction="#submitAction" prefHeight="60.0" prefWidth="60.0" text="⮡">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button fx:id="clear" layoutX="490.0" layoutY="333.0" onAction="#clearAction" prefHeight="60.0" prefWidth="60.0" text="C">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</VBox>
